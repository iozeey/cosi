<div class="container">
	<div class="text-center">
		<h1>Please Enter Restaurant Address</h1>

		<%= render 'form', location: @location %>
		<div class="container text-center">
			<h3>Define Delivery Zone around your Restaurant.</h3>
			<div class="map" id="map_in" style='width: 100%; height: 600px;'>

			</div>
			<div style="text-align:center">
				<input id="clear_shapes" value="Clear Zone" type="button"/>
				<input id="save_encoded" value="Save Encoded" type="button" hidden="true" />
				<input id="restore" value="Restore Zone" type="button" hidden="true" />
			</div>
			<div id="map_out" style='width: 100%; height: 400px;' hidden="true">
			</div>
		</div>
		<%= link_to 'Back', locations_path %>
	</div>
</div>
<script type="text/javascript">
  $(document).ready( initialize );
  $(document).on("page:load", initialize );
</script>
